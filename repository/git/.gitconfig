[user]
    email = mrogacki@nexway.com
    name = Marcin Rogacki
[color]
    ui = true
[core]
    editor = nvim
    filemode = false
    autocrlf = false
	excludesfile = ~/.gitglobal/ignore
[credential]
    helper = cache --timeout=36000
[push]
	default = simple
[alias]
	sync = !~/.gitglobal/subcommand/sync
	hooks = !~/.gitglobal/subcommand/hooks
	submodulerm = !~/.gitglobal/subcommand/submodulerm
    nvim = !$EDITOR -p $(git status --short | awk '$1 ~ /^M|A|U/ {print $2}')
[diff]
	tool = nvim -d
[merge]
	tool = nvim -d
[url "git@github.com:"]
	insteadOf = https://github.com/
